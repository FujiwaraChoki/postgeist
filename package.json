{
  "name": "postgeist",
  "version": "0.1.0",
  "description": "AI-Powered Twitter Analysis & Content Generation Tool",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "build:binary": "bun build src/index.ts --compile --outfile=dist/postgeist",
    "build:all": "npm run build:linux && npm run build:macos && npm run build:windows",
    "build:linux": "bun build src/index.ts --compile --target=bun-linux-x64 --outfile=dist/postgeist-linux",
    "build:macos": "bun build src/index.ts --compile --target=bun-darwin-x64 --outfile=dist/postgeist-macos",
    "build:macos-arm": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile=dist/postgeist-macos-arm64",
    "build:windows": "bun build src/index.ts --compile --target=bun-windows-x64 --outfile=dist/postgeist-windows.exe",
    "install:local": "./scripts/install.sh",
    "test": "bun test",
    "lint": "bun run --bun eslint src/**/*.ts",
    "format": "bun run --bun prettier --write src/**/*.ts",
    "typecheck": "bun run --bun tsc --noEmit",
    "setup": "bun run src/index.ts --setup",
    "clean": "rm -rf dist data/*.json",
    "postinstall": "echo 'ðŸš€ Postgeist installed! Run: bun run setup'"
  },
  "bin": {
    "postgeist": "./src/index.ts"
  },
  "keywords": [
    "twitter",
    "social-media",
    "ai",
    "content-generation",
    "analysis",
    "automation",
    "cli"
  ],
  "author": "FujiwaraChoki",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FujiwaraChoki/postgeist"
  },
  "bugs": {
    "url": "https://github.com/FujiwaraChoki/postgeist/issues"
  },
  "homepage": "https://github.com/FujiwaraChoki/postgeist#README",
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.0-beta.13",
    "@clack/prompts": "^0.11.0",
    "@the-convocation/twitter-scraper": "^0.17.1",
    "ai": "^5.0.0-beta.24",
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "ora": "^8.2.0",
    "zod": "^3.25.76"
  }
}
